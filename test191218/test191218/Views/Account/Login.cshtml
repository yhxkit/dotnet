@model test191218.ModelsForView.LoginUserModel



<h3>로긴 페이지</h3>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label>사용자 아이디</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="id 입력" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>사용자 비번</label>
        <input type="text" class="form-control" asp-for="UserPassword" placeholder="비번 입력" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">로그인</button>
    </div>

</form>