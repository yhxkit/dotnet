@model test191218.Models.User


<h3>가입페이지</h3>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">

    <div class="form-group">
        <label>사용자 아이디</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="idsss" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>사용자 비번</label>
        <input type="text" class="form-control" asp-for="UserPassword" placeholder="비번" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>사용자 이름</label>
        <input type="text" class="form-control" placeholder="이름" asp-for="UserName" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">가입</button> 
    </div>

</form>